<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fastcampus.baseballmanagement.team.service.impl.TeamDAO">

    <insert id="insert" parameterType="com.fastcampus.baseballmanagement.team.dto.Team" useGeneratedKeys="true" keyProperty="team_id">
        INSERT INTO team (name, created_at)
        VALUES (#{name}, now())
    </insert>

    <select id="findAll" resultType="com.fastcampus.baseballmanagement.team.dto.Team">
        SELECT team_id, stadium_id, name, created_at
        FROM team
    </select>

</mapper>