<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fastcampus.baseballmanagement.stadium.service.impl.StadiumDAO">
    <select id="findById" resultType="com.fastcampus.baseballmanagement.stadium.Stadium">
        select * from stadium where id = #{id};
    </select>

    <select id="findAll" resultType="com.fastcampus.baseballmanagement.stadium.Stadium">
        select * from stadium;
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into stadium (name, created_at) values (#{name}, now());
    </insert>

    <delete id="delete">
        delete from stadium where id = #{id};
    </delete>

    <update id="update">
        update stadium set name = #{name} where id = #{id};
    </update>
</mapper>